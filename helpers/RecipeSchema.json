{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A recipe scraped from the web",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "ingredients": {
      "type": "array",
      "minItems": 0,
      "items": { "type": "string" }
    },
    "instructions": {
      "type": "array",
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "tags": {
      "type": "array",
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "time": {
      "type": "object",
      "properties": {
        "prep": { "type": "string" },
        "cook": { "type": "string" },
        "active": { "type": "string" },
        "inactive": { "type": "string" },
        "ready": { "type": "string" },
        "total": { "type": "string" }
      }
    },
    "servings": {
      "type": { "type": "string" }
    },
    "image": { "type": "string" }
  }
}
